<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_138"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/dp_36"
    android:layout_marginRight="@dimen/dp_36"
    android:background="@drawable/shape_info_publish_del"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_publish_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#1e1e1e"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        tools:text="确认删除图片？"
        android:text="确认删除图片？" />

    <View
        android:id="@+id/view_line_info_publish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_88"
        android:background="#e2e2e2"/>

    <LinearLayout
        android:layout_below="@id/view_line_info_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title_publish_cancel"
            android:layout_width="@dimen/dp_1"
            android:layout_weight="1"
            android:textColor="#999999"
            android:textSize="17sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"/>


        <TextView
            android:id="@+id/tv_title_publish_sure"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#1e1e1e"
            android:gravity="center"
            android:textSize="17sp"
            android:text="确定"/>
    </LinearLayout>

    <View
        android:id="@+id/view_line_center"
        android:layout_below="@id/view_line_info_publish"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_0_5"
        android:background="#e2e2e2"
        android:layout_height="match_parent"/>

</RelativeLayout>